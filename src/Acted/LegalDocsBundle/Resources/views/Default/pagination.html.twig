{% if pageCount > 1 %}
    <ul class="row pagination">

        {% if previous is defined %}
            <li>
                <a class="prev-page pageArrows" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                    <span class="glyphicon glyphicon-triangle-left"></span>
                </a>
            </li>
        {% else %}
            {#<li class="disabled">
                <span>&laquo;&nbsp;{{ 'Previous'|trans }}</span>
            </li>#}
        {% endif %}

        {% if startPage > 1 %}
            {#<li>
                <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">
                    <div class="button">1</div>
                </a>
            </li>#}
            {% if startPage == 3 %}
                {#<li>
                    <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">
                        <div class="button">2</div>
                    </a>
                </li>#}
            {% elseif startPage != 2 %}
                {#<li class="disabled">
                    <span>&hellip;</span>
                </li>#}
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        <div class="button">{{ page }}</div>
                    </a>
                </li>
            {% else %}
                <li>
                    <a href="">
                        <div class="button active">{{ page }}</div>
                    </a>
                </li>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    {#<li class="disabled">
                        <span>&hellip;</span>
                    </li>#}
                {% else %}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                    </li>
                {% endif %}
            {% endif %}
            {#<li>
                <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">
                    <div class="button">{{ pageCount }}</div>
                </a>
            </li>#}
        {% endif %}

        {% if next is defined %}
            <li>
                <a class="next-page pageArrows" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    <span class="glyphicon glyphicon-play"></span>
                </a>
            </li>
        {% else %}
            {#<li class="disabled">
                <span>{{ 'Next'|trans }}&nbsp;&raquo;</span>
            </li>#}
        {% endif %}
    </ul>
{% endif %}
