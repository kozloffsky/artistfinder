<div class="modal event-modal free-quote-modal modal-registered fade" id="eventModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true"></span></button>
                <h4 class="modal-title">
                    <div class="warn">!</div>
                    Tip: Enter your event details below and it will automatically apply to your next quote requests
                </h4>
            </div>
            <form id="eventForm">{#requestQuoteForm#}
                <div class="modal-body">
                    <button type="button" class="close close_second" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                    <div class="row clearfix">
                        <div class="col-lg-12 form-group">
                            <label for="event_name">Event name</label>
                            <input type="text" maxlength="60" class="form-control" id="event_name" placeholder="Name your event" name="name" v-model="eventObj.name" :value="eventObj.name">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <div class="col-lg-6 no-pad-left">
                                <label for="event_event_date">Date</label>
                                <input type="text" class="date-picker form-control" id="event_event_date" name="event_date" placeholder="05/04/2016">
                            </div>
                            <div class="col-lg-6 no-pad-right ">
                                <label class="col-xs-12 no-pad" for="count_days">1 day/multiple days</label>
                                <select class="select_width_101" data-class="selections-white low-select" name="count_days" id="event_duration">
                                    <option v-for="n in 30" :value="n">${ n }-day event</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <div class="col-lg-6 no-pad-left">
                                <label for="event_time">Event timing</label>
                                <input id="event_time" type="text" class="form-control" v-model="eventObj.eventTiming" placeholder="Evening" name="event_time">
                            </div>
                            <div class="col-lg-6 no-pad-right">
                                <label for="event_country">Country</label>
                                <select class="select_width_101" data-class="selections-white low-select" name="country" id="event_country">
                                    <option value="United Kingdom" selected="">United Kingdom</option>
                                    <option value="Germany">Germany</option>
                                    <option value="France">France</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <label for="event_location">Address</label>
                            <input type="text" class="form-control" name="location" id="event_location" placeholder="Type the address here...">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <div class="col-lg-6 no-pad-left">
                                <label for="venue_type">Venue type</label>
                                <select class="select_width_101" data-class="selections-white low-select" name="venue_type" id="venue_type">
                                    <option v-for="(venueType, venueTypeIndex) in eventObj.venueType" :value="venueType.id" name="venue_type">${ venueType.venue_type }</option>
                                </select>
                            </div>

                            <div class="col-lg-6 no-pad-right guests-number">
                                <label for="guests_count">Number of guests</label>
                                <select class="select_width_101" data-class="selections-white low-select" name="number_of_guests" id="guests_count">
                                    <option value="less_then_50">Less than 50</option>
                                    <option value="50-100">50-100</option>
                                    <option value="100-500">100-500</option>
                                    <option value="500+">500+</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 form-group" id="additional_info_area">
                            <label for="additional_info">Additional info</label>
                            <span class="additional_info_counter">
                                <i class="current-count">0</i>
                                <i>/</i>
                                <i>450</i>
                            </span>
                            <textarea maxlength="450" name="additional_info" class="form-control additional_info_input" v-model="eventObj.eventAdditionalInfo" id="additional_info" placeholder="Put your comments here"></textarea>
                        </div>
                    </div>
                </div>
            </form>
            <form>
                <div class="modal-footer">
                    <div class="col-lg-12 no-pad">
                        <div class="col-lg-12 padd_bottom_15px">
                            <div class="controls">
                                <div class="button-gradient filled orange">
                                    <button class="btn" v-on:click="createEvent($event)">Create an event</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

