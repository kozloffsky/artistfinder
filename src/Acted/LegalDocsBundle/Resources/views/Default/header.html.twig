<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
          content="width=device-width, height=device-height, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

<link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
</head>
<body>

{% if app.request.get('_route') == 'acted_legal_docs_homepage' %}
<header class="home">
    {% elseif app.request.get('_route') == 'acted_legal_docs_search' %}
    <header class="search">
    {% else %}
    <header>
{% endif %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ app.request.getSchemeAndHttpHost() }}"><img src="{{ asset('assets/images/logo.png') }}" alt=""></a>

                {% if app.user %}
                <div class="profile-dropdown dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">
                        <img class="avatar" src="{{ app.user.avatar }}" alt="Avatar">
                        {{ app.user.firstname}} {{ app.user.lastname }} <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>
                </div>
                {% endif %}
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <div class="divider-vertical"></div>
                <ul class="nav navbar-nav navbar-left">
                    <li class="active">
                        <a href="#">
                            How it works
                            <div class="underline">
                                <div class="top"></div>
                                <div class="bottom"></div>
                            </div>
                        </a>

                    </li>
                    <li>
                        <a href="#">Residencies
                            <div class="underline">
                                <div class="top"></div>
                                <div class="bottom"></div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="#">Forums
                            <div class="underline">
                                <div class="top"></div>
                                <div class="bottom"></div>
                            </div>
                        </a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                    <li class="bookings"><a href="#">My bookings
                            <div class="underline">
                                <div class="top"></div>
                                <div class="bottom"></div>
                            </div>
                        </a>
                    </li>
                    <li class="profile"><a href="#">
                            Profile
                            <div class="underline">
                                <div class="top"></div>
                                <div class="bottom"></div>
                            </div>
                        </a>
                    </li>
                    <li class="mail">
                        <!--For screens > 991px-->
                        <div class="hidden-sm hidden-xs badge">4</div>
                        <a class="hidden-sm hidden-xs" href="#"><img src="{{ asset('assets/images/messages.png') }}" alt=""></a>
                        <!--For screens < 991px-->
                        <a class="hidden-md hidden-lg" href="#">Messages<span class="badge">13</span></a>
                    </li>
                    <li class="profile-dropdown dropdown hidden-sm">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">
                            <img class="avatar" src="{{ app.user.avatar }}" alt="Avatar">
                            {{ app.user.firstname}} {{ app.user.lastname }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            {% if(app.user) %}
                                <li><a href="{{ logout_path() }}">Logout</a></li>
                            {% endif %}
                        </ul>
                        <span id="userInformation" class="hidden">{{ app.user.id }}</span>
                    </li>
                    {% else %}
                        <li class="bookings"><a href="#">Become a talent
                                <div class="underline">
                                    <div class="top"></div>
                                    <div class="bottom"></div>
                                </div>
                            </a>
                        </li>
                        <li class="profile"><a href="#">
                                Find talents
                                <div class="underline">
                                    <div class="top"></div>
                                    <div class="bottom"></div>
                                </div>
                            </a>
                        </li>
                        <li class="profile"><a href="#" data-toggle="modal" data-target="#registrationModal">
                                Sign Up
                                <div class="underline">
                                    <div class="top"></div>
                                    <div class="bottom"></div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <div class="divider-vertical"></div>
                        </li>
                        <li class="profile"><a href="#" data-toggle="modal" data-target="#loginModal">
                                Log In
                                <div class="underline">
                                    <div class="top"></div>
                                    <div class="bottom"></div>
                                </div>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

</header>