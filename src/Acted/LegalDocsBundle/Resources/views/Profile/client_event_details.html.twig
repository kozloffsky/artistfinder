        <div class="col-md-6 col-sm-6 left_column" v-bind:data-event-id="event.id">
            <div class="row">
                <div class="printer_icon">
                    <p>
                        <i class="fa fa-print" aria-hidden="true"></i>
                        Print
                    </p>
                </div>
                <label for="event_name">Event name</label>
                <input type="text" maxlength="60"  v-model.lazy.trim="event.title" v-bind:value="event.title" class="form-control enable_toggler" id="event_name" placeholder="Christmas party" name="name">
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 no-pad-left">
                    <label for="event_date">Date</label>
                    <input type="text" class="date-picker form-control enable_toggler" v-model="event.starting_date" id="event_date" v-bind:value="event.starting_date" placeholder="05/04/2016">
                </div>
                <div class="col-lg-6 col-md-6 no-pad-right">
                    <label class="col-xs-12 no-pad" for="event_days_duration">1 day/multiple days</label>
                    <select disabled class="enable_toggler" data-class="selections-white low-select" name="event_days_duration" id="event_duration">
                        <option value="0">1-day event</option>
                        <option value="1">2-day event</option>
                        <option value="2">3-day event</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 no-pad-left">
                    <label for="event_time">Event timing</label>
                    <input id="event_time" v-model.lazy.trim="event.timing" v-bind:value="event.timing" type="text" class="form-control enable_toggler" placeholder="Evening" name="event_time">
                </div>
                <div class="col-lg-6 col-md-6 no-pad-right">
                    <label for="event-country">Country</label>
                    <input disabled type="text" class="form-control" id="event-country" placeholder="United Kingdom" name="country">
                </div>
            </div>
            <div class="row">
                <label for="event_address">Address</label>
                <input type="text" v-model.lazy.trim="event.location" class="form-control enable_toggler" v-bind:value="event.location" id="event_address" placeholder="Type the address here...">
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 no-pad-left">
                    <label for="venue_type">Venue type</label>
                    <select class="select_width_101 enable_toggler" data-class="selections-white low-select" name="venue_type" id="venue_type" v-model="selectedVenue">
                        <option v-for="venue in venues" v-bind:value="venue.id">${venue.venue_type}</option>
                    </select>
                </div>
                <div class="col-lg-6 col-md-6 no-pad-right">
                    <label for="guests_count">Number of guests</label>
                    <select class="select_width_101 enable_toggler" data-class="selections-white low-select" name="number_of_guests" id="guests_count" v-model.lazy="selectedGuest">
                        <option v-for="guest in guests" v-bind:value="guest.value">${ guest.text }</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <label for="additional_info">Additional info</label>
                <span class="additional_info_counter">0/200</span>
