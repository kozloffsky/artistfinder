
{% for feedback in artist.ratings %}

    <article class="feedback-block">
        <div class="row">
            <div class="avatar">
                <img src="{{ feedback.event.user.avatar }}" alt="Avatar">
                <p class="name">{{ feedback.event.user.firstname }}</p>
            </div>

            <div class="text">
                <p>
                    {{ feedback.comments }}
                </p>
            </div>
        </div>
    </article>

{% endfor %}

    <ul class="row pagination">
        <li>
            <a href="#">
                <div class="button active">1</div>
            </a>
        </li>
        <li>
            <a href="#">
                <div class="button">2</div>
            </a>
        </li>
        <li>
            <a class="next-page" href="#"><span class="glyphicon glyphicon-play"></span></a>
        </li>
    </ul>

    <button class="show-more-info">
        Show More
    </button>
