
{% for feedback in feedbacks %}
    <article class="feedback-block">
        <div class="row">
            <div class="avatar">
                <img src="{{ feedback.event.user.avatar }}" alt="Avatar">
                <p class="name">{{ feedback.event.user.firstname }}</p>
            </div>

            <div class="pull-right">
                <span>{{ feedback.ratingDateTime|date('d F Y') }}</span>
                <span><i class="fa fa-trash"></i></span>
            </div>
        </div>
        <div class="row">
            <div class="text" data-max-chars-desktop="500" data-max-chars-mobile="200">
                <div class="stars ratingFeedback">
                    <span class="hidden ratingFeedbackCount">{{ feedback.rating }}</span>
                    <div class="star">
                        <div style="" class="fill-star"></div>
                    </div>

                    <div class="star">
                        <div style="" class="fill-star"></div>
                    </div>

                    <div class="star">
                        <div style="" class="fill-star"></div>
                    </div>

                    <div class="star">
                        <div style="" class="fill-star"></div>
                    </div>

                    <div class="star">
                        <div style="" class="fill-star"></div>
                    </div>
                </div>
                <p class="feedback-text">
                    {{ feedback.comments }}
                </p>
                <a class="more">+more</a>
                <div class="gradient"></div>
            </div>
        </div>
    </article>
{% endfor %}

<div class="navigation">
    {{ knp_pagination_render(feedbacks) }}
</div>

    <button class="show-more-info">
        Show More
    </button>
