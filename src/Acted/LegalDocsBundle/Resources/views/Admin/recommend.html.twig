{% extends '_layout.html.twig' %}

{% block body %}

    <div class="col-md-12">
        <h2 class="sub-header">Recommended</h2>
    </div>
    <div class="col-md-4">
    <form action="/administration/recommend/1">
        <fieldset class="form-group">
            <label for="querySearch">Search</label>
            <input type="text" class="form-control" name="query" id="querySearch" placeholder="Search">
        </fieldset>
        <fieldset class="form-group">
            <label for="start">Start</label>
            <input type="number" class="form-control" name="start" id="start" placeholder="start">
        </fieldset>

        <fieldset class="form-group">
            <label for="end">End</label>
            <input type="number" class="form-control" name="end" id="end" placeholder="end">
        </fieldset>
        <div class="checkbox">
            <label>
                <input type="checkbox"> Show only recommended
            </label>
        </div>
        <fieldset class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
    </form>
    </div>
    <div class="col-md-12">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Recommended</th>
                <th>Recommended index</th>
            </tr>
            </thead>
            <tbody>
            {% for artist in artists %}
                <tr id="{{ artist.id }}">
                    <td>{{ artist.id }}</td>
                    <td>{{ artist.name }}</td>
                    <td>{{ artist.slug }}</td>
                    <td>
                        <span class="recommendedIndexAdmin">{% if artist.recommend is defined %}
                            {{ artist.recommend }}
                        {% else %}
                            0
                        {% endif %}
                        </span>
                        <input type="number" class="recommendedInput">
                    </td>
                    <td>
                        {#{{ path('admin_manage_spotlight', {'id': artist.id }) }}#}
                        <a href="#"><button type="button" class="btn btn-info manageRecommended">Manage</button></a>
                        <a href="#"><button type="button" class="btn btn-info saveRecommended">Save</button></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <nav>
        <ul class="pagination">
            {% if paginations['previous'] is defined %}
                <li>
                    <a href="{{ path('admin_dashboard_recommend', {'page': paginations['previous']  }) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {% endif %}
            {% for pagin in range(1, paginations['pageRange']) %}
                <li>
                    <a href="{{ path('admin_dashboard_recommend', {'page': pagin }) }}">{{ pagin }}</a>
                </li>
            {% endfor %}
            {% if paginations['next'] is defined %}
                <li>
                    <a href="{{ path('admin_dashboard_recommend', {'page': paginations['next']  }) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
    </div>

{% endblock %}