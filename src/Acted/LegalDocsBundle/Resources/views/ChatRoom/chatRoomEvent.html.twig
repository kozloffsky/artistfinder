<form action="#" class="detail-form">
    <div class="row clearfix">
        {% if not app.user.artist %}
            <div class="col-lg-6 col-md-6 col-sm-6 no-padding">
            <h2 class="title">Event details</h2>
            <div class="frame">
                <label for="name_event">Name event</label>
                <input type="text" id="name_event" placeholder="{{ chat.event.title }}" value="{{ chat.event.title }}">
            </div>
            <div class="frame">
                <label for="country-select">Country</label>
                <select data-class="main-select" class="full-width" name="main-select" id="country-select">
                    {% for country in countries() %}
                        {% if country.name == chat.event.countryName %}
                            <option value="{{ country.id }}" name="country" selected="selected">{{ country.name }}</option>
                        {% else %}
                            <option value="{{ country.id }}" name="country">{{ country.name }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <div class="row holder border-b clearfix">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="frame">
                        <label for="datetimepicker">Date</label>
                        <input id="datetimepicker" placeholder="{{ chat.event.starting_date }}" type="text" value="{{ chat.event.starting_date }}">
                    </div>
                    <div class="frame">
                        <label for="performance">Performance time</label>
                        <input type="text" id="performance" placeholder="10 p.m.">
                    </div>
                    <div class="frame">
                        <label for="arrival">Arrival time</label>
                        <input type="text" id="arrival" placeholder="6 p.m.">
                    </div>
                    <div class="frame">
                        <label for="guests">Number of guests</label>
                        <input type="text" id="guests" placeholder="{{ chat.event.number_of_guests }}" value="{{ chat.event.number_of_guests }}">
                    </div>
                    <div class="frame">
                        <label for="vanue">Vanue type</label>
                        <input type="text" id="vanue" placeholder="{{ chat.event.venue_type.venue_type }}" value="{{ chat.event.venue_type.venue_type }}">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 pull-right">
                    <div class="frame">
                        <label for="adress">Adress</label>
                        <input type="text" id="adress" placeholder="Sr Regis">
                    </div>
                    <div class="frame">
                        <label for="city">City</label>
                        <select data-class="main-select" class="full-width" name="main-select" id="cityEvent">
                        </select>
                    </div>
                    <div class="frame">
                        <label for="p-code">Post code</label>
                        <input type="text" id="p-code" placeholder="Sr Regis">
                    </div>
                    <div class="map-holder">
                        <div id="map"></div>
                        <em class="note">Pin your location on the map</em>
                    </div>
                    <div class="hidden" id="eventLocationCoordinates">
                        <span class="eventCityId">{{ chat.event.city.id }}</span>
                        <span class="latitude">{{ chat.event.city.latitude }}</span>
                        <span class="longitude">{{ chat.event.city.longitude }}</span>
                    </div>
                </div>
            </div>
        </div>
        {% elseif app.user.artist %}
            <div class="col-lg-6 col-md-6 col-sm-6 no-padding">
                    <h2 class="title">Event details</h2>
                    <div class="frame">
                        <label for="name_event">Name event</label>
                        <input type="text" placeholder="{{ chat.event.title }}" value="{{ chat.event.title }}" disabled>
                    </div>
                    <div class="frame">
                        <label for="country-select">Country</label>
                        <input type="text" placeholder="{{ chat.event.countryName }}" value="{{ chat.event.countryName }}" disabled>
                    </div>
                    <div class="row holder border-b clearfix">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="frame">
                                <label for="datetimepicker">Date</label>
                                <input type="text" placeholder="{{ chat.event.starting_date }}" value="{{ chat.event.starting_date }}" disabled>
                            </div>
                            <div class="frame">
                                <label for="performance">Performance time</label>
                                <input type="text" placeholder="{{ chat.event.timing }}" value="{{ chat.event.timing }}" disabled>
                            </div>
                            <div class="frame">
                                <label for="arrival">Arrival time</label>
                                <input type="text" placeholder="" value="" disabled>
                            </div>
                            <div class="frame">
                                <label for="guests">Number of guests</label>
                                <input type="text" placeholder="{{ chat.event.number_of_guests }}" value="{{ chat.event.number_of_guests }}" disabled>
                            </div>
                            <div class="frame">
                                <label for="vanue">Vanue type</label>
                                <input type="text" placeholder="{{ chat.event.venue_type.venue_type }}" value="{{ chat.event.venue_type.venue_type }}" disabled>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 pull-right">
                            <div class="frame">
                                <label for="adress">Adress</label>
                                <input type="text" placeholder="{{ chat.event.location }}" value="{{ chat.event.location }}" disabled>
                            </div>
                            <div class="frame">
                                <label for="city">City</label>
                                <input type="text" placeholder="{{ chat.event.city.name }}" value="{{ chat.event.city.name }}" disabled>
                            </div>
                            <div class="frame">
                                <label for="p-code">Post code</label>
                                <input type="text" placeholder="" value="" disabled>
                            </div>
                            <div class="map-holder">
                                <img src="https://maps.googleapis.com/maps/api/staticmap?center={{ chat.event.location|url_encode }}&zoom=14&key={{googlemaps.key}}&size=196x106&markers=size:mid|color:blue|label:E%7C{{ chat.event.location|url_encode }}
">
                            </div>
                            <div class="hidden" id="eventLocationCoordinates">
                                <span class="eventCityId">{{ chat.event.city.id }}</span>
                                <span class="latitude">{{ chat.event.city.latitude }}</span>
                                <span class="longitude">{{ chat.event.city.longitude }}</span>
                            </div>
                        </div>
                    </div>
                </div>
        {% endif %}
        <div class="col-lg-6 col-md-6 col-sm-6 no-padding ">
            {% if app.user.artist %}
                <h2 class="title">Quote</h2>
            <div class="free-quote-modal request quotationDetailsChat">
            </div>
            {% else %}
            <h2 class="title">Quote</h2>
            <div class="v-frame">
                <div class="v-box">
                    <div class="box">
                        <em class="note">No quote submitted yet</em>
                        <div class="controls">
                            <div class="button-gradient filled">
                                <button class="btn" type="submit">Send quotation</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    <div class="row list clearfix">
        <div class="col-lg-3 col-md-3 col-sm-3">
            <label for="c-name">Client name</label>
            <input type="text" id="c-name" placeholder="Thomas Man">
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <label for="c-person">Contact person</label>
            <input type="text" id="c-person" placeholder="Thomas Hardy">
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <label for="p-number">Phone number</label>
            <input type="text" id="p-number" placeholder="+4412321321321">
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <label for="e-address">Email addres</label>
            <input type="text" id="e-address" placeholder="smth@gmail.com">
        </div>

    </div>
</form>